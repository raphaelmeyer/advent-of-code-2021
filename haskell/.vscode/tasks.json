{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "stack build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "run tests",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "stack test",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "run program",
      "type": "shell",
      "group": "none",
      "command": "stack run ${input:day}-exe",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true
      },
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "day",
      "description": "Which executable?",
      "options": [
        "day-07",
        "day-06",
        "day-05",
        "day-03",
        "day-01"
      ],
      "default": "day-07"
    }
  ]
}